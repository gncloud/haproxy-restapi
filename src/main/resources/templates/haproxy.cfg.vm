global
log /dev/log	local0
log /dev/log	local1 notice
chroot /var/lib/haproxy
#stats socket /run/haproxy/admin.sock mode 660 level admin
stats timeout 30s
user haproxy
group haproxy
daemon

ca-base /etc/ssl/certs
crt-base /etc/ssl/private

defaults
log	 global
mode	http
#option  httplog
option  dontlognull
timeout connect 5000
timeout client  50000
timeout server  50000

listen stats :1900
mode http
stats enable
stats hide-version
stats realm Haproxy\ Statistics
stats uri /
stats auth gncloud:gncloud1234

#foreach($frontend in $frontends)
frontend $frontend.name
bind $frontend.bindIp:$frontend.bindPort
mode $frontend.mode

#foreach($acl in $frontend.acls)
acl $acl.name $acl.pattern
#if($acl.pattern)
use_backend $acl.backend if $acl.name
#else
default_backend $acl.backend
#end
#end
#end

#foreach($backend in $backends)
backend $backend.name
mode $backend.mode
#option forwardfor
http-request set-header X-Forwarded-Port %[dst_port]
#foreach($server in $backend.servers)
server $server.name $server.host:$server.port check
#end
#end