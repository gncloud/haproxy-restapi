global
#chroot /var/lib/haproxy
#stats socket /run/haproxy/admin.sock mode 660 level admin
#stats timeout 30s
#user haproxy
#group haproxy
daemon

ca-base /etc/ssl/certs
crt-base /etc/ssl/private

defaults
mode	http
option  dontlognull
timeout connect 5000ms
timeout client  50000ms
timeout server  50000ms

listen stats :1900
mode http
stats enable
stats hide-version
stats realm Haproxy\ Statistics
stats uri /
stats auth gncloud:gncloud1234

#foreach($frontend in $frontends)
frontend $frontend.name
bind $frontend.bindIp:$frontend.bindPort
mode $frontend.mode
#if($frontend.timeoutClient)
timeout client ${frontend.timeoutClient}ms
#end
#if($frontend.timeoutServer)
timeout server ${frontend.timeoutServer}ms
#end
#if($frontend.timeoutConnect)
timeout connect ${frontend.timeoutConnect}ms
#end

#foreach($acl in $frontend.acls)
#if ($acl.pattern)
acl $acl.name $acl.pattern
use_backend $acl.backend if $acl.name
#end
#if (!$acl.pattern)
default_backend $acl.backend
#end
#end
#if ($frontend.mode == "tcp")
default_backend $frontend.name
#end

#end



#foreach($backend in $backends)
backend $backend.name
mode $backend.mode
#if($backend.mode == "http")
option forwardfor
http-request set-header X-Forwarded-Port %[dst_port]
#end
server server1 $backend.host:$backend.port check

#end